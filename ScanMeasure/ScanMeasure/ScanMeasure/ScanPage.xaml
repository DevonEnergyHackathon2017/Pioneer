<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScanMeasure.ScanPage">
    <ContentPage.Content>
        <StackLayout Padding="5, 10">
            <Label Text="Scan QR Code or Bar Code:" />
            <Button Text="Scan" Clicked="OnCameraButtonClicked" />
            <Label Text="If no QR/Bar Code:" />
            <Button Text="Measure" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>